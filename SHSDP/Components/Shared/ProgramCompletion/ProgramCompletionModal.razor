@if (IsVisible)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content terminal-modal">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        Program Completed
                    </h5>
                </div>
                <div class="modal-body">
                    <p class="mb-0">
                        The program has finished executing. You can continue viewing the output or restart the terminal.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-light" @onclick="OnViewOutput">
                        <i class="bi bi-eye me-2"></i>View Output
                    </button>
                    <button type="button" class="btn btn-success" @onclick="OnRestart">
                        <i class="bi bi-arrow-clockwise me-2"></i>Restart Terminal
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnViewOutput { get; set; }

    [Parameter]
    public EventCallback OnRestart { get; set; }
}

